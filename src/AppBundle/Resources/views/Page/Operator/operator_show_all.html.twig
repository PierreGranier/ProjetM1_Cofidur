{% extends 'AppBundle::Page/Operator/operator.html.twig' %}

{% block body %}
	 
	
	 <label for="importSalaries">Importer les salariés (à partir d'un fichier .prn)</label> <br />	
	 <a href="{{ path('AppBundle_operator_import') }}">Importer</a>
	{#
	{{ form_start(form) }}
